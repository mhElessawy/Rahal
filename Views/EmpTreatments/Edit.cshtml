@model RahalWeb.Models.EmpTreatment

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .card {
        border-radius: 10px;
    }

    .card-header {
        border-radius: 10px 10px 0 0 !important;
    }

    .form-label {
        font-weight: 500;
    }

    h5 {
        color: #0d6efd;
    }
</style>

<div class="container mt-4" dir="rtl">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0" style="color:white">تعديل معاملة موظف</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" class="row g-3">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="UserId" />
                <input type="hidden" asp-for="DeleteFlag" />
                <input type="hidden" asp-for="UserRecievedId" />
                <input type="hidden" asp-for="UserRecievedDate" />
                <input type="hidden" asp-for="UserRecievedNo" />

                <!-- Treatment Information Section -->
                <div class="col-md-12">
                    <h5 class="border-bottom pb-2">بيانات المعاملة</h5>
                </div>

                <div class="col-md-2">
                    <label asp-for="TreatmentNo" class="form-label">رقم المعاملة</label>
                    <input asp-for="TreatmentNo" class="form-control" readonly />
                </div>

                <div class="col-md-2">
                    <label asp-for="Date" class="form-label">التاريخ</label>
                    <input asp-for="Date" type="date" class="form-control" required />
                    <span asp-validation-for="Date" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="EmpId" class="form-label">اسم الموظف</label>
                    <select asp-for="EmpId" class="form-control" asp-items="@ViewBag.EmpId" required>
                        <option value="">-- اختر الموظف --</option>
                    </select>
                    <span asp-validation-for="EmpId" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="DeffEmpTreatmentId" class="form-label">نوع المعاملة</label>
                    <select asp-for="DeffEmpTreatmentId" class="form-control" asp-items="@ViewBag.DeffEmpTreatmentId" required>
                        <option value="">-- اختر نوع المعاملة --</option>
                    </select>
                    <span asp-validation-for="DeffEmpTreatmentId" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="TreatmentDetails" class="form-label">التفاصيل</label>
                    <input asp-for="TreatmentDetails" class="form-control" />
                    <span asp-validation-for="TreatmentDetails" class="text-danger small"></span>
                </div>

                <div class="col-md-2">
                    <label asp-for="TreatmentExtraMoney" class="form-label">مبلغ اضافى</label>
                    <input asp-for="TreatmentExtraMoney" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="TreatmentExtraMoney" class="text-danger small"></span>
                </div>

                <div class="col-md-2">
                    <label asp-for="TreatmentTotal" class="form-label">الإجمالى</label>
                    <input asp-for="TreatmentTotal" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="TreatmentTotal" class="text-danger small"></span>
                </div>

                <!-- Form Actions -->
                <div class="col-md-12 mt-4">
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> العوده للصفحة الرئيسية
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> تعديل المعاملة
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
