@model RahalWeb.Models.CarInfo

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="delete-confirmation-container" dir="rtl">
    <div class="delete-header">
        <h1 class="delete-title">حذف بيانات سيارة </h1>
        <div class="delete-warning alert alert-danger">
            <i class="fas fa-exclamation-triangle"></i>
            <strong>تحذير:</strong> سوف يتم حذف بيانات السيارة و لا يمكن استعادتها مرة آخرى.
        </div>
    </div>
    <div class="company-details-card">
        <div class="card-header">
            <h4>تفاصيل بيانات السيارة</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="detail-group">
                        <label>كود السيارة</label>
                        <div class="detail-value">@Html.DisplayFor(model => model.CarCode)</div>
                    </div>
                    <div class="detail-group">
                        <label>رقم السيارة </label>
                        <div class="detail-value">@Html.DisplayFor(model => model.CarNo)</div>
                    </div>
                    <div class="detail-group">
                        <label>اسم الشركة</label>
                        <div class="detail-value">@Html.DisplayFor(model => model.Company!.CompNameAr)</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="detail-group">
                        <label>الصنع</label>
                        <div class="detail-value">@Html.DisplayFor(model => model.CarType!.DeffName)</div>
                    </div>
                    <div class="detail-group">
                        <label>النوع</label>
                        <div class="detail-value">@Html.DisplayFor(model => model.CarKind!.DeffName)</div>
                    </div>
                    <div class="detail-group">
                        <label>الموديل</label>
                        <div class="detail-value">@Html.DisplayFor(model => model.CarModel)</div>
                    </div>
                   
                </div>
            </div>
        </div>
    </div>
    <div class="delete-actions">
        <form asp-action="Delete" class="delete-form">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger btn-lg delete-button">
                <i class="fas fa-trash-alt"></i> تأكيد الحذف
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg cancel-button">
                <i class="fas fa-times"></i> إالغاء
            </a>
        </form>
    </div>
</div>



<!-- Include Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">