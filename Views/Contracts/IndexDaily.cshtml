</style>


<h1 dir="rtl">العقود اليومية </h1>

@{
    var approachingContracts = ViewBag.ApproachingDiscountContracts as List<RahalWeb.Models.Contract>;
}
@if (approachingContracts != null && approachingContracts.Count > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" dir="rtl" role="alert" style="border-right: 5px solid #f39c12; border-radius: 8px;">
        <div style="display: flex; align-items: center; gap: 10px; margin-bottom: 8px;">
            <i class="fas fa-bell" style="font-size: 1.2rem; color: #856404;"></i>
            <strong style="font-size: 1rem; color: #856404;">تنبيه: عقود تقترب من تاريخ التخفيض (@approachingContracts.Count عقد)</strong>
        </div>
        <table style="width:100%; font-size:0.82em; border-collapse:collapse;">
            <thead>
                <tr style="background-color: rgba(133,100,4,0.1);">
                    <th style="padding:5px 10px; text-align:center; border-bottom:1px solid #f0c14b;">رقم العقد</th>
                    <th style="padding:5px 10px; text-align:center; border-bottom:1px solid #f0c14b;">اسم الموظف</th>
                    <th style="padding:5px 10px; text-align:center; border-bottom:1px solid #f0c14b;">كود السيارة</th>
                    <th style="padding:5px 10px; text-align:center; border-bottom:1px solid #f0c14b;">تاريخ التخفيض</th>
                    <th style="padding:5px 10px; text-align:center; border-bottom:1px solid #f0c14b;">الأيام المتبقية</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in approachingContracts)
                {
                    var daysLeft = c.DiscountDate!.Value.DayNumber - DateOnly.FromDateTime(DateTime.Today).DayNumber;
                    var rowColor = daysLeft <= 1 ? "#fff3cd" : "transparent";
                    <tr style="background-color:@rowColor;">
                        <td style="padding:4px 10px; text-align:center;">@c.ContractNo</td>
                        <td style="padding:4px 10px; text-align:center;">@c.Employee?.FullNameAr</td>
                        <td style="padding:4px 10px; text-align:center;">@c.Car?.CarCode</td>
                        <td style="padding:4px 10px; text-align:center;">@c.DiscountDate</td>
                        <td style="padding:4px 10px; text-align:center;">
                            @if (daysLeft == 0)
                            {
                                <span style="color:#dc3545; font-weight:bold;">اليوم</span>
                            }
                            else
                            {
                                <span style="color:#856404; font-weight:bold;">@daysLeft يوم</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" style="position:absolute; top:10px; left:10px;"></button>
    </div>
}

@if (user!.ContractDailySave == true)
{

    <p dir="rtl">
        <a asp-action="CreateDaily" class="btn btn-create-outline">
            <i class="fas fa-plus-circle"></i> إضافة عقد
        </a>
    </p>
}

<div class="search-container" dir="rtl">
    <form asp-action="IndexDaily" method="get">
        <div class="form-group">
            <label for="ContractNoString">رقم العقد:</label>
            <input type="text" name="ContractNoString" value="@ViewData["ContractNoFilter"]" placeholder=" رقم العقد " style="width:100px" />
            <label for="CarCodeString">كود السيارة:</label>
            <input type="number" name="CarCodeString" value="@ViewData["CarCodeFilter"]" placeholder=" كود السيارة " style="width:100px" />

            <label for="EmpCodeString">رقم الموظف :</label>
            <input type="number" name="EmpCodeString" value="@ViewData["EmpCodeFilter"]" placeholder=" رقم الموظف" style="width:100px" />

            <label for="EmpNameSearch">اسم الموظف:</label>
            <input type="text" name="EmpNameSearch" value="@ViewData["EmpNameFilter"]" placeholder="اسم الموظف" style="width:120px" />

            <label for="companyId"> الشركة:</label>
            <select name="companyId" asp-items="ViewBag.Companies" class="form-control" style="width:120px">
                <option value="">-- جميع الشركات --</option>
            </select>
            <input type="submit" value="بحث" class="btn btn-primary" />
            <a asp-action="IndexDaily" class="btn btn-secondary">إعادة تعيين</a>
        </div>
    </form>
</div>

<table class="bordered-table" dir="rtl">
    <thead>
        <tr>
            <th>
                رقم العقد
            </th>
            <th>
                تاريخ العقد
            </th>
            <th>
                كود السيارة
            </th>
            <th>
                رقم الموظف
            </th>
            <th>
                اسم الموظف
            </th>
            <th>
                بداية العقد
            </th>
            <th>
                نهاية العقد
            </th>
            <th>
                عدد الأيام
            </th>
            <th>
                البلغ  اليومي
            </th>
            


            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ContractNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContractDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Car!.CarCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee!.EmpCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee!.FullNameAr)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NoOfDays)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DailyCredit)
                </td>
             
                <td class="action-links">
                    <a asp-action="CreateDaily" asp-controller="Bills" asp-route-id="@item.Id" class="btn-danger"><i class="fas fa-paypal"></i> دفع </a>
                    <a asp-action="DetailsDaily" asp-route-id="@item.Id" class="btn-details"><i class="fas fa-info-circle"></i> تفاصيل</a>
                    @if (user!.ContractDailyEnd == true)
                    {
                        <a asp-action="EndContractDaily" asp-route-id="@item.Id" class="btn-delete"><i class="fas fa-trash-alt"></i> إنتهاء عقد</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="pagination-container" dir="rtl">
    @{
        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
        var nextDisabled = !Model.HasNextPage ? "disabled" : "";
    }

    <a asp-action="IndexDaily"
       asp-route-pageNumber="@(Model.PageIndex - 1)"
       asp-route-ContractNoString="@ViewData["ContractNoFilter"]"
       asp-route-CarCodeString="@ViewData["CarCodeFilter"]"
       asp-route-EmpCodeString="@ViewData["EmpCodeFilter"]"
       asp-route-EmpNameSearch="@ViewData["EmpNameFilter"]"
       asp-route-companyId="@ViewData["CompanyFilter"]"
       class="btn btn-default @prevDisabled">
        السابق
    </a>

    <span>الصفحة @Model.PageIndex من @Model.TotalPages</span>

    <a asp-action="IndexDaily"
       asp-route-pageNumber="@(Model.PageIndex + 1)"
       asp-route-ContractNoString="@ViewData["ContractNoFilter"]"
       asp-route-CarCodeString="@ViewData["CarCodeFilter"]"
       asp-route-EmpCodeString="@ViewData["EmpCodeFilter"]"
       asp-route-EmpNameSearch="@ViewData["EmpNameFilter"]"
       asp-route-companyId="@ViewData["CompanyFilter"]"
       class="btn btn-default @nextDisabled">
        التالي
    </a>
</div>