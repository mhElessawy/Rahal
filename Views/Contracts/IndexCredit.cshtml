    <a asp-action="CreateMonthly" class="btn btn-create-outline">
        <i class="fas fa-plus-circle"></i> إضافة عقد
    </a>
</p> *@


<div class="search-container" dir="rtl">
    <form asp-action="IndexCredit" method="get">
        <div class="form-group">
            <label for="ContractNoString">رقم العقد:</label>
            <input type="text" name="ContractNoString" value="@ViewData["ContractNoFilter"]" placeholder=" رقم العقد " style="width:100px" />
            <label for="CarCodeString">كود السيارة:</label>
            <input type="number" name="CarCodeString" value="@ViewData["CarCodeFilter"]" placeholder=" كود السيارة " style="width:100px" />

            <label for="EmpCodeoSearch">رقم الموظف :</label>
            <input type="number" name="EmpCodeoSearch" value="@ViewData["EmpCodeFilter"]" placeholder=" رقم الموظف" style="width:100px" />

            <label for="EmpNameSearch">اسم الموظف:</label>
            <input type="text" name="EmpNameSearch" value="@ViewData["EmpNameFilter"]" placeholder="اسم الموظف" style="width:120px" />

            <label for="companyId"> الشركة:</label>
            <select name="companyId" asp-items="ViewBag.Companies" class="form-control" style="width:120px">
                <option value="">-- جميع الشركات --</option>
            </select>
            <input type="submit" value="بحث" class="btn btn-primary" />
            <a asp-action="IndexCredit" class="btn btn-secondary">إعادة تعيين</a>
        </div>
    </form>
</div>
<table class="bordered-table" dir="rtl" style="text-align:center">
    <thead>
        <tr>
            <th>
                رقم العقد
            </th>
            <th>
                تاريخ العقد
            </th>
            <th>
                كود السيارة
            </th>
            <th>
                اسم الموظف
            </th>
            <th>
                بداية القسط
            </th>
            <th>
                نهاية القسط
            </th>
            <th>
                إجمالي الأقساط
            </th>
            <th>
                عدد الأقساط
            </th>
           
            <th>
                قيمة القسط
            </th>

         @*    <th>
                المدفوع
            </th>
            <th>
                الباقي
            </th> *@

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Contract.ContractNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contract.ContractDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contract!.Car!.CarCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contract!.Employee!.FullNameAr)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Contract.CreditStartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contract.CreditEndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contract.CreditTotalCost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contract.CreditNoOfMonth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contract.CreditMonthPay)
                </td>
               @*  <td>
                    @Html.DisplayFor(modelItem => item.TotalPaid)
                </td>
                <td>
                    @(item.Contract.CreditTotalCost - item.TotalPaid)
                </td> *@
                <td class="action-links">
                    @*  <a asp-action="Edit" asp-route-id="@item.Id" class="btn-edit"><i class="fas fa-edit"></i> تعديل</a> *@
                    <a asp-action="DetailsCredit" asp-route-id="@item.Contract.Id" class="btn-details"><i class="fas fa-info-circle"></i> تفاصيل</a>
                    <a asp-action="DetailsCredit" asp-route-id="@item.Contract.Id" class="btn-success"><i class="fas fa-print"></i> طباعة</a>

                </td>
            </tr>
        }
    </tbody>
</table>



<button onclick="printBills()" class="btn btn-success">طباعة</button>

<script>
    function printBills() {
        var printContents = document.querySelector('.bordered-table').outerHTML;
        var originalContents = document.body.innerHTML;

        document.body.innerHTML =
            '<h1 style="text-align:center">فواتير الأقساط</h1>' +
            printContents 

        window.print();
        document.body.innerHTML = originalContents;
    }
</script>