@model RahalWeb.Models.CompanyInfo

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="delete-confirmation-container" dir="rtl">
    <div class="delete-header">
        <h1 class="delete-title">حذف شركة</h1>
        <div class="delete-warning alert alert-danger">
            <i class="fas fa-exclamation-triangle"></i>
            <strong>تحذير:</strong> سوف يتم حذف بيانات الشركة و لا يمكن استعادتها مرة آخرى.
        </div>
    </div>

    <div class="company-details-card">
        <div class="card-header">
            <h4>تفاصيل الشركة</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="detail-group">
                        <label>كود الشركة</label>
                        <div class="detail-value">@Html.DisplayFor(model => model.CompCode)</div>
                    </div>
                    <div class="detail-group">
                        <label>Commpany Name </label>
                        <div class="detail-value">@Html.DisplayFor(model => model.CompNameEn)</div>
                    </div>
                    <div class="detail-group">
                        <label>اسم الشركة</label>
                        <div class="detail-value">@Html.DisplayFor(model => model.CompNameAr)</div>
                    </div>
                    <div class="detail-group">
                        <label>رقم الرخصة</label>
                        <div class="detail-value">@Html.DisplayFor(model => model.CompLicenseNo)</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="detail-group">
                        <label>العنوان</label>
                        <div class="detail-value">@Html.DisplayFor(model => model.Address)</div>
                    </div>
                    <div class="detail-group">
                        <label>المنطقة السكنية</label>
                        <div class="detail-value">@Html.DisplayFor(model => model.City!.DeffName)</div>
                    </div>
                    <div class="detail-group">
                        <label>تاريخ الترخيص</label>
                        <div class="detail-value">@Html.DisplayFor(model => model.CompReleaseDate)</div>
                    </div>
                    <div class="detail-group">
                        <label>نوع النشاط</label>
                        <div class="detail-value">@Html.DisplayFor(model => model.CompActivate!.DeffName)</div>
                      
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.CompLogo))
            {
                <div class="logo-preview">
                    <label>Company Logo</label>
                    <div class="logo-container">
                        <img src="~/UploadCompLogo/@Model.CompLogo" alt="Company Logo" class="company-logo">
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="delete-actions">
        <form asp-action="Delete" class="delete-form">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger btn-lg delete-button">
                <i class="fas fa-trash-alt"></i> تأكيد الحذف
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg cancel-button">
                <i class="fas fa-times"></i> إالغاء
            </a>
        </form>
    </div>

   @*  <div class="additional-warning">
        <p><i class="fas fa-info-circle"></i> <strong>Note:</strong> Deleting this company will also remove all associated records.</p>
    </div> *@
</div>



