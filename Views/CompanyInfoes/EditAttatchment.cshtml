@model RahalWeb.Models.CompanyInfoAtt

@{
    ViewData["Title"] = "EditAttatchment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container mt-4" dir="rtl">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0" style="color:white">تعديل بيانات ملف</h4>
        </div>
        <div class="card-body">
            <form asp-action="EditAttatchment" class="row g-3" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CompId" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <!-- Personal Information Section -->
                <div class="col-md-12">
                    <h5 class="border-bottom pb-2">بيانات الملف</h5>
                </div>

                <div class="col-md-3">
                    <label asp-for="TitleData" class="form-label">عنوان الملف</label>
                    <input asp-for="TitleData" class="form-control" type="text" required />
                    <span asp-validation-for="TitleData" class="text-danger small"></span>
                </div>

                <div class="col-md-3">
                    <label asp-for="pdfFile1" class="form-label">ملف PDF</label>
                    <input asp-for="pdfFile1" class="form-control" type="file" accept=".pdf" />
                    <span asp-validation-for="pdfFile1" class="text-danger small"></span>
                </div>

                <input type="hidden" asp-for="PathFileData" />

                @if (Model != null && !string.IsNullOrEmpty(Model.PathFileData))
                {
                    <div class="col-md-12 mt-3">
                        <label class="form-label">الملف الحالي:</label>
                        <div class="d-flex align-items-center">
                            <a href="@Model.PathFileData" target="_blank" class="btn btn-outline-primary me-2">
                                <i class="fas fa-eye"></i> عرض الملف
                            </a>
                            <span>@System.IO.Path.GetFileName(Model.PathFileData)</span>
                        </div>
                    </div>
                }

                <!-- Form Actions -->
                <div class="col-md-12 mt-4">
                    <div class="d-flex justify-content-between">
                        <a asp-action="Attatchment" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> العوده للصفحة الرئيسية
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> تعديل بيانات الملف
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
    }

    .card-header {
        border-radius: 10px 10px 0 0 !important;
    }

    .form-label {
        font-weight: 500;
    }

    h5 {
        color: #0d6efd;
    }
</style>


