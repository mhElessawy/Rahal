@model RahalWeb.Models.CompanyInfoAtt

@{
    ViewData["Title"] = "DeleteAttatchment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="delete-confirmation-container" dir="rtl">
    <div class="delete-header">
        <h1 class="delete-title">حذف مرفقات</h1>
        <div class="delete-warning alert alert-danger">
            <i class="fas fa-exclamation-triangle"></i>
            <strong>تحذير:</strong> سوف يتم حذف الملف المرفق.
        </div>
    </div>
    <div class="company-details-card">
        <div class="card-header">
            <h4>تفاصيل الملف</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="detail-group">
                        <label>عنوان الملف</label>
                        <div class="detail-value">@Html.DisplayFor(model => model.TitleData)</div>
                    </div>
                    <div class="detail-group">
                        <label>اسم الموظف </label>
                        <div class="detail-value">@Html.DisplayFor(model => model.Comp!.CompNameAr)</div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="delete-actions">
        <form asp-action="DeleteAttatchment" class="delete-form">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger btn-lg delete-button">
                <i class="fas fa-trash-alt"></i> تأكيد الحذف
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg cancel-button">
                <i class="fas fa-times"></i> إالغاء
            </a>
        </form>
    </div>
</div>

<!-- Include Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

