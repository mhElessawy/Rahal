@model RahalWeb.Models.DeffEmpTreatment

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="company-info-container" dir="rtl">
    <div class="company-info-header">
        <h4>بيانات المعاملة</h4>
        <div class="action-buttons">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">تعديل</a>
            <a asp-action="Index" class="btn btn-secondary">العوده لصفحة المعاملات</a>
        </div>
    </div>
    <div class="company-info-body" dir="rtl">
        <div class="row">
            <div class="col-md-6">
                <div class="info-section">
                    <h5>البيانات العامة</h5>
                    <div class="info-item">
                        <label>الكود</label>
                        <span>@Html.DisplayFor(model => model.DeffCode)</span>
                    </div>
                    <div class="info-item">
                        <label>اسم المعاملة</label>
                        <span>@Html.DisplayFor(model => model.DeffName)</span>
                    </div>
                    <div class="info-item">
                        <label>السعر 1</label>
                        <span>@Html.DisplayFor(model => model.Price1)</span>
                    </div>
                    <div class="info-item">
                        <label>السعر 2</label>
                        <span>@Html.DisplayFor(model => model.Price2)</span>
                    </div>
                    <div class="info-item">
                        <label>السعر 3</label>
                        <span>@Html.DisplayFor(model => model.Price3)</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
