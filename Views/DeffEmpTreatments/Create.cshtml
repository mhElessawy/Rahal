@model RahalWeb.Models.DeffEmpTreatment

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .card {
        border-radius: 10px;
    }

    .card-header {
        border-radius: 10px 10px 0 0 !important;
    }

    .form-label {
        font-weight: 500;
    }

    h5 {
        color: #0d6efd;
    }
</style>

<div class="container mt-4" dir="rtl">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0" style="color:white">إضافة معاملة موظف</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create" class="row g-3">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="UserId" value="@ViewBag.UserId" />
                <!-- Treatment Information Section -->
                <div class="col-md-12">
                    <h5 class="border-bottom pb-2">بيانات المعاملة</h5>
                </div>
                <div class="col-md-3">
                    <label asp-for="TreatmentNo" class="control-label">رقم المعاملة</label>
                    <input asp-for="TreatmentNo" value="@ViewBag.maxTreatmentNo" class="form-control" readonly />
                    <span asp-validation-for="TreatmentNo" class="text-danger small"></span>
                </div>

                <div class="col-md-3">
                    <label asp-for="EmpId" class="control-label">اسم الموظف</label>
                    <select asp-for="EmpId" class="form-control" asp-items="ViewBag.EmpId" required></select>
                    <span asp-validation-for="EmpId" class="text-danger small"></span>
                </div>

                <div class="col-md-3">
                    <label asp-for="DeffId" class="control-label">نوع المعاملة</label>
                    <select asp-for="DeffId" class="form-control" asp-items="ViewBag.DeffId" required></select>
                    <span asp-validation-for="DeffId" class="text-danger small"></span>
                </div>

                <div class="col-md-3">
                    <label asp-for="TreatmentDate" class="control-label">التاريخ</label>
                    <input asp-for="TreatmentDate" type="date" class="form-control" required />
                    <span asp-validation-for="TreatmentDate" class="text-danger small"></span>
                </div>

                <div class="col-md-3">
                    <label asp-for="TreatmentAmount" class="control-label">المبلغ</label>
                    <input asp-for="TreatmentAmount" type="number" step="0.01" class="form-control" required />
                    <span asp-validation-for="TreatmentAmount" class="text-danger small"></span>
                </div>

                <div class="col-md-9">
                    <label asp-for="Notes" class="control-label">ملاحظات</label>
                    <input asp-for="Notes" class="form-control" />
                    <span asp-validation-for="Notes" class="text-danger small"></span>
                </div>

                <!-- Form Actions -->
                <div class="col-md-12 mt-4">
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> العوده للصفحة الرئيسية
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> إضافة معاملة
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
