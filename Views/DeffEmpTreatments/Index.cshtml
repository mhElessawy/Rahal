@model IEnumerable<RahalWeb.Models.DeffEmpTreatment>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Enhanced styling for the employee info table */
    .bordered-table {
        width: 100%;
        border-collapse: collapse;
        margin: 15px 0;
        font-size: 0.8em;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        overflow: hidden;
    }

        .bordered-table thead tr {
            background-color: #2c3e50;
            color: #ffffff;
            text-align: center;
            font-weight: bold;
        }

        .bordered-table th,
        .bordered-table td {
            padding: 5px 5px;
            border-bottom: 1px solid #dddddd;
            text-align: center;
            white-space: nowrap;
        }

        .bordered-table tbody tr {
            transition: all 0.3s ease;
        }

            .bordered-table tbody tr:nth-of-type(even) {
                background-color: #f8f9fa;
            }

            .bordered-table tbody tr:last-of-type {
                border-bottom: 2px solid #2c3e50;
            }

            .bordered-table tbody tr:hover {
                background-color: #e8f4f8;
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            }

    /* Action buttons styling */
    .action-links {
        white-space: nowrap;
        display: flex;
        gap: 5px;
        justify-content: center;
    }

    .btn-edit, .btn-details, .btn-delete, .btn-info {
        display: inline-block;
        padding: 5px 10px;
        border-radius: 4px;
        text-decoration: none;
        font-size: 0.7rem;
        font-weight: 500;
        transition: all 0.2s ease;
    }

    .btn-edit {
        background-color: #f39c12;
        color: white;
    }

        .btn-edit:hover {
            background-color: #e67e22;
            transform: translateY(-1px);
        }

    .btn-details {
        background-color: #3498db;
        color: white;
    }

        .btn-details:hover {
            background-color: #2980b9;
            transform: translateY(-1px);
        }

    .btn-delete {
        background-color: #e74c3c;
        color: white;
    }

        .btn-delete:hover {
            background-color: #c0392b;
            transform: translateY(-1px);
        }

    /* Create button styling */
    .btn-create-outline {
        background-color: #3498db;
        color: white;
        border: 2px solid #3498db;
        border-radius: 5px;
        padding: 8px 16px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        display: inline-block;
    }

        .btn-create-outline:hover {
            background-color: white;
            color: #3498db;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

    /* Header styling */
    h1 {
        color: #2c3e50;
        font-weight: 700;
        margin-bottom: 1.5rem;
        padding-bottom: 0.5rem;
        border-bottom: 2px solid #3498db;
    }

    /* Responsive design */
    @@media (max-width: 1200px) {
        .bordered-table {
            font-size: 0.85rem;
        }

            .bordered-table th,
            .bordered-table td {
                padding: 10px 8px;
            }
    }

    @@media (max-width: 992px) {
        .table-container {
            overflow-x: auto;
        }

        .action-links {
            flex-direction: column;
            gap: 3px;
        }

        .btn-edit, .btn-details, .btn-delete {
            margin: 2px 0;
            text-align: center;
            font-size: 0.75rem;
            padding: 4px 8px;
        }
    }

    @@media (max-width: 768px) {
        h1 {
            font-size: 1.5rem;
        }

        .bordered-table {
            font-size: 0.8rem;
        }

            .bordered-table th,
            .bordered-table td {
                padding: 8px 5px;
            }
    }
</style>

<h1 dir="rtl">تعريف المعاملات</h1>

<p dir="rtl">

    <a asp-action="Create" class="btn btn-create-outline">
        <i class="fas fa-plus-circle"></i> إضافة معاملة
    </a>
</p>


<table class="bordered-table" dir="rtl">
    <thead>
        <tr>
            <th>
                <label>الكود</label>
            </th>
            <th>
                <label>اسم المعاملة</label>
            </th>
            <th>
                <label>السعر 1</label>
            </th>
            <th>
                <label>السعر 2</label>
            </th>
            <th>
                <label>السعر 3</label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DeffCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeffName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price3)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn-edit"><i class="fas fa-edit"></i> تعديل</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn-details"><i class="fas fa-info-circle"></i> تفاصيل</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn-delete"><i class="fas fa-trash-alt"></i> حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>