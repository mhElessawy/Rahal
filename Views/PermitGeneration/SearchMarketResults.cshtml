@model List<EmployeeInfo>

@{
    ViewData["Title"] = "نتائج البحث - تجديد رخصة سوق";
}

<div class="container mt-4" dir="rtl">
    <div class="card">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0">
                <i class="fas fa-list"></i> @ViewData["Title"]
                <span class="badge bg-light text-success ms-2">@Model.Count نتيجة</span>
            </h4>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-success">
                            <tr>
                                <th>الكود</th>
                                <th>الاسم العربي</th>
                                <th>الرقم المدني</th>
                                <th>الجنسية</th>
                                <th>المهنة</th>
                                <th>الإجراء</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var employee in Model)
                            {
                                <tr>
                                    <td><strong>@employee.EmpCode</strong></td>
                                    <td>@employee.FullNameAr</td>
                                    <td>@employee.CivilId</td>
                                    <td>@employee.Nationality?.DeffName</td>
                                    <td>@employee.JobTitle?.DeffName</td>
                                    <td>
                                        <a asp-action="GenerateMarket" asp-route-id="@employee.Id"
                                           class="btn btn-sm btn-success"
                                           title="إنشاء مستند تجديد رخصة سوق">
                                            <i class="fas fa-file-word"></i> إنشاء المستند
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="alert alert-success mt-3">
                    <i class="fas fa-check-circle"></i>
                    تم العثور على <strong>@Model.Count</strong> موظف. اضغط على "إنشاء المستند" لتوليد مستند تجديد رخصة السوق.
                </div>
            }
            else
            {
                <div class="alert alert-warning text-center">
                    <i class="fas fa-exclamation-triangle fa-2x mb-2"></i>
                    <h5>لم يتم العثور على موظفين</h5>
                    <p>الرجاء تغيير معايير البحث والمحاولة مرة أخرى</p>
                </div>
            }

            <div class="text-center mt-4">
                <a asp-action="SearchMarket" class="btn btn-success">
                    <i class="fas fa-search"></i> بحث جديد
                </a>
                <a asp-action="SelectDocument" class="btn btn-secondary">
                    <i class="fas fa-arrow-right"></i> الصفحة الرئيسية
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .table-hover tbody tr:hover {
        cursor: pointer;
        background-color: rgba(25, 135, 84, 0.1);
    }
</style>
