@{
    ViewData["Title"] = "اختر نوع المستند";
}

<div class="container mt-5" dir="rtl">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0"><i class="fas fa-file-alt"></i> @ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show">
                            <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="row">
                        <!-- Taxi Permit Card -->
                        <div class="col-md-6 mb-4">
                            <div class="card h-100 document-card shadow-sm border-primary"
                                 onclick="window.location.href='@Url.Action("SearchTaxi", "PermitGeneration")'">
                                <div class="card-body text-center">
                                    <div class="document-icon mb-3">
                                        <i class="fas fa-taxi fa-4x text-primary"></i>
                                    </div>
                                    <h4 class="card-title text-primary">تصريح إجرة جوالة</h4>
                                    <p class="card-text text-muted">
                                        إنشاء وتجديد تصريح سيارة أجرة جوالة
                                    </p>
                                    <div class="mt-3">
                                        <span class="badge bg-primary">نموذج: NewPerm.docx</span>
                                    </div>
                                </div>
                                <div class="card-footer text-center bg-light">
                                    <a asp-action="SearchTaxi" class="btn btn-primary btn-lg w-100">
                                        <i class="fas fa-play-circle"></i> ابدأ الآن
                                    </a>
                                </div>
                            </div>
                        </div>

                        <!-- Market License Card -->
                        <div class="col-md-6 mb-4">
                            <div class="card h-100 document-card shadow-sm border-success"
                                 onclick="window.location.href='@Url.Action("SearchMarket", "PermitGeneration")'">
                                <div class="card-body text-center">
                                    <div class="document-icon mb-3">
                                        <i class="fas fa-store fa-4x text-success"></i>
                                    </div>
                                    <h4 class="card-title text-success">تجديد رخصة سوق</h4>
                                    <p class="card-text text-muted">
                                        تجديد رخصة سوق عامة/خاصة
                                    </p>
                                    <div class="mt-3">
                                        <span class="badge bg-success">نموذج: ReNewPermSp.docx</span>
                                    </div>
                                </div>
                                <div class="card-footer text-center bg-light">
                                    <a asp-action="SearchMarket" class="btn btn-success btn-lg w-100">
                                        <i class="fas fa-play-circle"></i> ابدأ الآن
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Quick Actions -->
                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header bg-info text-white">
                                    <h5 class="mb-0"><i class="fas fa-bolt"></i> إجراءات سريعة</h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <a href="@Url.Action("TestGeneration", "PermitGeneration", new { type = "taxi" })"
                                               class="btn btn-outline-info w-100 mb-2" target="_blank">
                                                <i class="fas fa-vial"></i> اختبار تصريح الإجرة
                                            </a>
                                        </div>
                                        <div class="col-md-4">
                                            <a href="@Url.Action("TestGeneration", "PermitGeneration", new { type = "market" })"
                                               class="btn btn-outline-info w-100 mb-2" target="_blank">
                                                <i class="fas fa-vial"></i> اختبار رخصة السوق
                                            </a>
                                        </div>
                                        <div class="col-md-4">
                                            <a href="@Url.Action("CheckTemplate", "PermitGeneration")"
                                               class="btn btn-outline-secondary w-100 mb-2" target="_blank">
                                                <i class="fas fa-folder-open"></i> فحص القوالب
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


    <style>
        .document-card {
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .document-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0,0,0,0.15);
            }

        .document-icon {
            height: 100px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .badge {
            font-size: 0.8em;
            padding: 5px 10px;
        }
    </style>
