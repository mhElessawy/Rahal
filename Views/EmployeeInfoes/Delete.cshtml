@model RahalWeb.Models.EmployeeInfo

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="delete-confirmation-container" dir="rtl">
    <div class="delete-header">
        <h1 class="delete-title">حذف بيانات موظف</h1>
        <div class="delete-warning alert alert-danger">
            <i class="fas fa-exclamation-triangle"></i>
            <strong>تحذير:</strong> سوف يتم حذف بيانات الموظف و لا يمكن استعادتها مرة آخرى.
        </div>
    </div>

    <div class="company-details-card">
        <div class="card-header">
            <h4>تفاصيل الشركة</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="detail-group">
                        <label>كود الموظف</label>
                        <div class="detail-value">@Html.DisplayFor(model => model.EmpCode)</div>
                    </div>
                    <div class="detail-group">
                        <label>اسم الموظف  </label>
                        <div class="detail-value">@Html.DisplayFor(model => model.FullNameAr)</div>
                    </div>
                    <div class="detail-group">
                        <label>Employee Name</label>
                        <div class="detail-value">@Html.DisplayFor(model => model.FullNameEn)</div>
                    </div>
                    <div class="detail-group">
                        <label>اسم الشركة</label>
                        <div class="detail-value">@Html.DisplayFor(model => model.Company!.CompNameAr)</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="detail-group">
                        <label>الرقم المدني</label>
                        <div class="detail-value">@Html.DisplayFor(model => model.CivilId)</div>
                    </div>
                    <div class="detail-group">
                        <label>المرتب</label>
                        <div class="detail-value">@Html.DisplayFor(model => model.Salary)</div>
                    </div>
                    <div class="detail-group">
                        <label>رقم الهاتف</label>
                        <div class="detail-value">@Html.DisplayFor(model => model.MobiileNo)</div>
                    </div>
                    <div class="detail-group">
                        <label>الوظيفة</label>
                        <div class="detail-value">@Html.DisplayFor(model => model.JobTitle!.DeffName)</div>

                    </div>
                </div>
            </div>

           
        </div>
    </div>

    <div class="delete-actions">
        <form asp-action="Delete" class="delete-form">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger btn-lg delete-button">
                <i class="fas fa-trash-alt"></i> تأكيد الحذف
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg cancel-button">
                <i class="fas fa-times"></i> إالغاء
            </a>
        </form>
    </div>

    @*  <div class="additional-warning">
        <p><i class="fas fa-info-circle"></i> <strong>Note:</strong> Deleting this company will also remove all associated records.</p>
    </div> *@
</div>


