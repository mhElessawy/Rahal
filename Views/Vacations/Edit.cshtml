@model RahalWeb.Models.Vacation

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<hr />



<div class="container mt-4" dir="rtl">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0" style="color:white">تعديل أجازة</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" class="row g-3">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="EmpId" />
                <input type="hidden" asp-for="FromDate" />
                <input type="hidden" asp-for="ToDate" />
                <input type="hidden" id="oldFromDate" name="OldFromDate" value="@Model.FromDate" />
                <input type="hidden" id="oldToDate" name="OldToDate" value="@Model.ToDate" />
                <input type="hidden" asp-for="DeleteFlag" />
                <input type="hidden" asp-for="VacationPayed" />
                <input type="hidden" asp-for="VacationStatus" />
                <input type="hidden" asp-for="NoOfDays" />

                <!-- Personal Information Section -->
                <div class="col-md-12">
                    <h5 class="border-bottom pb-2">بيانات الأجازة</h5>
                </div>
                
                <div class="col-md-1">
                    <label asp-for="Emp.EmpCode" class="form-label">كود الموظف</label>
                    <input asp-for="Emp.EmpCode" value="@ViewBag.EmpCode" class="form-control" readonly />
                    <span asp-validation-for="Emp.EmpCode" class="text-danger small"></span>
                </div>

                <div class="col-md-2">
                    <label asp-for="Emp.FullNameAr" class="form-label">اسم الموظف</label>
                    <input asp-for="Emp.FullNameAr" value="@ViewBag.EmployeeFullNameAr" class="form-control" readonly />
                    <span asp-validation-for="Emp.FullNameAr" class="text-danger small"></span>
                </div>

               @*  <div class="col-md-2">
                    <label asp-for="FromDate" class="form-label">من تاريخ</label>
                    <input asp-for="FromDate" type="date" class="form-control" required id="fromDate" />
                    <span asp-validation-for="FromDate" class="text-danger small"></span>
                </div> *@

                <div class="col-md-12 mt-2">
                    <h5 class="border-bottom pb-2">التاريخ الحالي للأجازة</h5>
                </div>

                <div class="col-md-2">
                    <label class="form-label">من تاريخ (الحالي)</label>
                    <input type="text" class="form-control bg-light" readonly value="@Model.FromDate?.ToString("dd/MM/yyyy")" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">إلى تاريخ (الحالي)</label>
                    <input type="text" class="form-control bg-light" readonly value="@Model.ToDate?.ToString("dd/MM/yyyy")" />
                </div>

                <div class="col-md-12 mt-3">
                    <h5 class="border-bottom pb-2">التاريخ الجديد للأجازة</h5>
                </div>

                <div class="col-md-3">
                    <label class="form-label">اختيار شهر الأجازة الجديد</label>
                    @Html.DropDownList("ContractDetailsId", ViewBag.WorkMonth as SelectList,
                    "-- اختيار شهر الأجازة --", new { @class = "form-control", id = "vacationMonth", required = "required" })
                 </div>
                <div class="col-md-2">
                    <label asp-for="FromDate" class="form-label">من تاريخ</label>
                    <input type="text" class="form-control" readonly id="fromDateDisplay" />
                    <span asp-validation-for="FromDate" class="text-danger small"></span>
                </div>
                <div class="col-md-2">
                    <label asp-for="ToDate" class="form-label">إلى تاريخ</label>
                    <input type="text" class="form-control" readonly id="toDateDisplay" />
                    <span asp-validation-for="ToDate" class="text-danger small"></span>
                </div>

                <!-- Form Actions -->
                <div class="col-md-12 mt-4">
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> العوده للصفحة الرئيسية
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> تعديل بيانات الأجازة
                        </button>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
    }

    .card-header {
        border-radius: 10px 10px 0 0 !important;
    }

    .form-label {
        font-weight: 500;
    }

    h5 {
        color: #0d6efd;
    }
</style>

<script>
    document.getElementById("vacationMonth").addEventListener("change", function() {
        const selectedOption = this.options[this.selectedIndex];
        const dateString = selectedOption.text;

        if (!dateString || dateString === "-- اختيار شهر الأجازة --") {
            // Clear fields if no selection
            document.querySelector('input[name="FromDate"]').value = '';
            document.querySelector('input[name="ToDate"]').value = '';
            document.getElementById('fromDateDisplay').value = '';
            document.getElementById('toDateDisplay').value = '';
            return;
        }

        // Parse date in DD/MM/YYYY format
        const [day, month, year] = dateString.split('/').map(num => parseInt(num, 10));

        if (!day || !month || !year) return;

        // Create first day of month (FromDate)
        const fromDate = new Date(year, month - 1, 1);

        // Create last day of month (ToDate)
        const toDate = new Date(year, month, 0);

        console.log("From Date (First day):", fromDate);
        console.log("To Date (Last day):", toDate);

        if (!isNaN(fromDate.getTime()) && !isNaN(toDate.getTime())) {
            // Format as YYYY-MM-DD for hidden inputs
            const formattedFromDate = `${fromDate.getFullYear()}-${String(fromDate.getMonth() + 1).padStart(2, '0')}-${String(fromDate.getDate()).padStart(2, '0')}`;
            const formattedToDate = `${toDate.getFullYear()}-${String(toDate.getMonth() + 1).padStart(2, '0')}-${String(toDate.getDate()).padStart(2, '0')}`;

            // Update hidden inputs
            document.querySelector('input[name="FromDate"]').value = formattedFromDate;
            document.querySelector('input[name="ToDate"]').value = formattedToDate;

            // Format as DD/MM/YYYY for display inputs
            const displayFromDate = `${String(fromDate.getDate()).padStart(2, '0')}/${String(fromDate.getMonth() + 1).padStart(2, '0')}/${fromDate.getFullYear()}`;
            const displayToDate = `${String(toDate.getDate()).padStart(2, '0')}/${String(toDate.getMonth() + 1).padStart(2, '0')}/${toDate.getFullYear()}`;

            // Update display inputs
            document.getElementById('fromDateDisplay').value = displayFromDate;
            document.getElementById('toDateDisplay').value = displayToDate;
        } else {
            console.error("Invalid date parsing");
        }
    });
</script>
